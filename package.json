{
    "name": "edkit",
    "version": "1.0.0-rc",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Lightweight Rich Text Editor toolkit based on TypeScript",
    "keywords": [
        "rich-text",
        "html",
        "editor",
        "typescript"
    ],
    "homepage": "https://ideapp.dev/Edkit/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/Edkit.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/Edkit/issues"
    },
    "main": "dist/index.umd.js",
    "module": "dist/index.js",
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "dependencies": {
        "browser-fs-access": "^0.18.0"
    },
    "devDependencies": {
        "husky": "^7.0.0",
        "lint-staged": "^11.0.0",
        "microbundle": "^0.13.3",
        "open-cli": "^7.0.0",
        "prettier": "^2.3.2",
        "typedoc": "^0.21.2",
        "typescript": "^4.3.5"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,less,json,yml,js,ts,tsx}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "pack-dist": "rm -rf dist/  &&  microbundle --name Edkit --external browser-fs-access",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "npm run pack-dist  &&  npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
