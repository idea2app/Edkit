{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist/"
    },
    "include": ["source/**/*"],
    "typedocOptions": {
        "name": "Edkit",
        "excludeExternals": true,
        "excludePrivate": true,
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
